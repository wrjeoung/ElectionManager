<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/politic_text1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="투표구"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="|"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/politic_text1_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="금천구 독산1동 제1투표구"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/politic_text2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="투표소"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="|"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/politic_text2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="금천구 시흥대로 399 시티렉스 701"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:layout_marginLeft="20dip"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/politic_text3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="선거인수"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="|"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/politic_text3_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="2dip"
                android:text="4,000명 (2.5%)"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="투표율(12총선)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="|" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="55.2%(평균 60%)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="득표율 격차" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="|" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="정당(새누리 - 새정치)" />
    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/wrapper_voteratesub_header"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_floating_material_dark"
                android:gravity="center"
                android:text="구분" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/background_floating_material_dark"
                android:gravity="center"
                android:text="평균" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/background_floating_material_dark"
                android:gravity="center"
                android:text="6 지선" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/background_floating_material_dark"
                android:gravity="center"
                android:text="19 총선" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/background_floating_material_dark"
                android:gravity="center"
                android:text="18 대선" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/background_floating_material_dark"
                android:gravity="center"
                android:text="18 총선" />
        </TableRow>

        <TableRow
            android:id="@+id/wrapper_voteratesub_sungugu"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/voteratesub_sungugu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="선거구" />

            <TextView
                android:id="@+id/voteratesub_sungugu_avg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="-6.4" />

            <TextView
                android:id="@+id/voteratesub_sungugu_6th"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="3.5" />

            <TextView
                android:id="@+id/voteratesub_sungugu_19th"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="-10.6" />

            <TextView
                android:id="@+id/voteratesub_sungugu_18th_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="2.0" />

            <TextView
                android:id="@+id/voteratesub_sungugu_18th_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="5.0" />
        </TableRow>

        <TableRow
            android:id="@+id/wrapper_voteratesub_haengjoung"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/voteratesub_haengjoung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="행정동" />

            <TextView
                android:id="@+id/voteratesub_haengjoung_avg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="-5.0" />

            <TextView
                android:id="@+id/voteratesub_haengjoung_6th"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="2.5" />

            <TextView
                android:id="@+id/voteratesub_haengjoung_19th"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="-12.5" />

            <TextView
                android:id="@+id/voteratesub_haengjoung_18th_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="-1.5" />

            <TextView
                android:id="@+id/voteratesub_haengjoung_18th_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="2.0" />
        </TableRow>

        <TableRow
            android:id="@+id/wrapper_voteratesub_tupyogu"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/voteratesub_tupyogu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="투표구" />

            <TextView
                android:id="@+id/voteratesub_tupyogu_avg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="-3.2" />

            <TextView
                android:id="@+id/voteratesub_tupyogu_6th"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="없음" />

            <TextView
                android:id="@+id/voteratesub_tupyogu_19th"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="-11.3" />

            <TextView
                android:id="@+id/voteratesub_tupyogu_18th_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="1.6" />

            <TextView
                android:id="@+id/voteratesub_tupyogu_18th_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/primary_dark_material_light"
                android:gravity="center"
                android:text="3.2" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="득표율 격차 분석(map)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="기타 map 분석" />
    </LinearLayout>

</LinearLayout>