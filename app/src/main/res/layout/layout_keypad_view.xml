<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/password_bg"
    android:fitsSystemWindows="true"
    android:gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="29.5dip">

                <TableRow>

                    <ImageButton
                        android:id="@+id/passcode_btn_1"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_1_selector"
                        android:tag="1" />

                    <ImageButton
                        android:id="@+id/passcode_btn_2"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginLeft="25.5dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_2_selector"
                        android:tag="2" />

                    <ImageButton
                        android:id="@+id/passcode_btn_3"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginLeft="25.5dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_3_selector"
                        android:tag="3" />
                </TableRow>

                <TableRow android:layout_marginTop="11.5dip">

                    <ImageButton
                        android:id="@+id/passcode_btn_4"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_4_selector"
                        android:tag="4" />

                    <ImageButton
                        android:id="@+id/passcode_btn_5"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginLeft="25.5dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_5_selector"
                        android:tag="5" />

                    <ImageButton
                        android:id="@+id/passcode_btn_6"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginLeft="25.5dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_6_selector"
                        android:tag="6" />
                </TableRow>

                <TableRow android:layout_marginTop="11.5dip">

                    <ImageButton
                        android:id="@+id/passcode_btn_7"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_7_selector"
                        android:tag="7" />

                    <ImageButton
                        android:id="@+id/passcode_btn_8"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginLeft="25.5dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_8_selector"
                        android:tag="8" />

                    <ImageButton
                        android:id="@+id/passcode_btn_9"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginLeft="25.5dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_9_selector"
                        android:tag="9" />
                </TableRow>

                <TableRow android:layout_marginTop="11.5dip">

                    <Button
                        android:id="@+id/passcode_btn_c"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:visibility="invisible"
                        android:background="@null"
                        android:tag="10"
                        android:text="@string/popup_cancel"
                        android:textColor="@drawable/passcode_cancel_button_selector"
                        android:textSize="18.0sp" />

                    <ImageButton
                        android:id="@+id/passcode_btn_0"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginLeft="25.5dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_0_selector"
                        android:tag="0" />

                    <ImageButton
                        android:id="@+id/passcode_btn_b"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginLeft="25.5dip"
                        android:background="@null"
                        android:src="@drawable/passcode_button_x_selector"
                        android:tag="11" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
</LinearLayout>