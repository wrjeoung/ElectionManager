<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/organ_intro2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jsloves.election.fragment.OrganIntroFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#94CCBD"
            android:orientation="horizontal" >
            <Spinner
                android:id="@+id/spinner_7"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Spinner
                android:id="@+id/spinner_8"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button_search"
                android:layout_gravity="center_vertical"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/search_button_selector"
                android:layout_marginLeft="15dp"
                android:background="@null"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:background="#EBDBC4"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#5D5D5D"
                android:singleLine="true"
                android:text="지역"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#5D5D5D"
                android:text="단체명"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <ListView
            android:id="@+id/lv_list"
            android:background="#FFFFFF"
            android:dividerHeight="1dp"
            android:divider="#d3d3d3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

    </LinearLayout>
</FrameLayout>