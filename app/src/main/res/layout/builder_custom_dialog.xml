<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_txtarea"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="18.67dp"
        android:paddingRight="18.67dp" >

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="45.33dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:visibility="gone"
                android:src="@drawable/icon_alert" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:textColor="#888888"
                android:lineSpacingExtra="5.33dp"
                android:textSize="13.33dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_custom_dialog_fan_container"
            android:layout_width="match_parent"
            android:layout_height="20.67dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_custom_dialog_star_icon"
                android:layout_width="22.67dp"
                android:layout_height="20.67dp"
                android:layout_marginRight="8.67dp"
                android:background="@drawable/icon_popup_star" />

            <TextView
                android:id="@+id/layout_custom_dialog_fan_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-2.67dp"
                android:gravity="left|bottom"
                android:text=""
                android:textColor="#505050"
                android:textSize="13.33dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5.33dp"
            android:textColor="#888888"
            android:textSize="13.33dp"
            android:text=""
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/contentsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone" >

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.67dp"
                android:cacheColorHint="@android:color/white"
                android:divider="#dfe3e4"
                android:dividerHeight="0dp"
                android:drawSelectorOnTop="false"
                android:fadingEdge="none"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/content_frame"
        android:layout_alignRight="@+id/content_frame"
        android:layout_below="@+id/content_frame"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/negative_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/ivNegative"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_popup_btn_check"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNegative"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="cancel"
                android:textColor="#ffffff"
                android:textSize="13.33dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/positive_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/ivPositive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_popup_btn_check"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPositive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ok"
                android:textColor="#ffffff"
                android:textSize="13.33dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>